<style type="text/css">
  #pannel{
    text-align: center;
    background-color:#64757766;
    max-width: 40%;
    padding: 7%;
    box-shadow: 0px 0px 20px #9B8A8A;
    border-radius: 10px;
  }


</style>

<div  id="pannel" class="container" >
<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div style="background:#f05a5ab3"><%= devise_error_messages! %></div>

  <div class="field" style="margin:10px">
    
    <%= f.text_field :name,placeholder:"Name",class:"form-control input-sm" %>
  </div>

  <div class="field" style="margin:10px">
    
    <%= f.email_field :email, autofocus: true, placeholder:"Email",class:"form-control input-sm" %>
  </div>

  <div class="field" style="margin:10px">
    
       <%= f.password_field :password, autocomplete: "off" ,placeholder:"Enter Password",class:"form-control input-sm"%>
       
  </div>

  <div class="field" style="margin:10px">
    
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Re-type Password" ,class:"form-control input-sm"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class=>'btn btn-primary'%>
  </div>
<% end %>

<%= render "users/shared/links" %>

<% if @minimum_password_length %><br/>
    <em>Password must be <%= @minimum_password_length %> characters</em>
    <% end %><br />
</div>